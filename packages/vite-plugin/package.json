{
  "name": "@quajs/vite-plugin",
  "version": "0.1.0",
  "description": "Comprehensive Vite plugin for QuaEngine projects - handles script compilation, plugin discovery, and asset bundling",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "vite",
    "plugin",
    "quaengine",
    "visual-novel",
    "game-engine",
    "bundler"
  ],
  "author": "QuaDevTeam",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@quajs/engine": "workspace:*",
    "@quajs/quack": "workspace:*", 
    "@quajs/script-compiler": "workspace:*",
    "@quajs/logger": "workspace:*",
    "@quajs/utils": "workspace:*"
  },
  "devDependencies": {
    "vitest": "^3.2.4",
    "vite": "^6.0.0"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0"
  }
}